{% extends 'base.html.twig' %}

{% block title %}FicheFrais{% endblock %}

{% block body %}

    <div class="max-w-2xl mx-auto p-6">
        <h1 class="text-3xl font-extrabold text-gray-100 mb-6">FicheFrais</h1>

        {{ form_start(formFraisForfait, {'attr': {'class': 'space-y-6'}}) }}

        <div class="grid gap-6">
            <div>
                {{ form_label(formFraisForfait.km, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-200'}}) }}
                {{ form_widget(formFraisForfait.km, {'attr': {'class': 'mt-2 block w-full px-4 py-2 text-white text-sm border border-neutral-700 bg-neutral-800 rounded-lg shadow-sm'}}) }}
                {% if form_errors(formFraisForfait.km) %}
                    <p class="mt-1 text-sm text-red-600">{{ form_errors(formFraisForfait.km) }}</p>
                {% endif %}
            </div>

            <div>
                {{ form_label(formFraisForfait.nuitees, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-200'}}) }}
