                    <p class="mt-1 text-sm text-red-600">{{ form_errors(formFraisForfait.repas) }}</p>
                {% endif %}
            </div>

            <div>
                {{ form_label(formFraisForfait.etape, null, {'label_attr': {'class': 'block text-sm font-semibold text-gray-200'}}) }}
