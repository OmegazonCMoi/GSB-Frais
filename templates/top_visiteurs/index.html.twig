{% extends 'base.html.twig' %}

{% block title %}Hello TopVisiteursController!{% endblock %}

{% block body %}

    <!-- Container -->
    <div class="max-w-4xl mx-auto p-4 bg-neutral-100 dark:bg-neutral-950 rounded-lg shadow-lg text-neutral-900 dark:text-neutral-200 h-screen">

        <!-- Form to select the month -->
        <form method="post" class="mb-6">
            <div class="flex items-center space-x-4">
                <label class="block">
                    <select name="mois" class="block w-full px-3 py-2 border border-neutral-300 dark:border-neutral-700 rounded-md shadow-sm bg-white dark:bg-neutral-800 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 dark:focus:ring-indigo-400 dark:focus:border-indigo-400">
                        {% for key, mois in moisList %}
                            <option value="{{ key }}">{{ mois }}</option>
                        {% endfor %}
                    </select>
                </label>
                <button type="submit" class="px-4 py-2 text-white bg-neutral-200 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 dark:bg-indigo-500 dark:hover:bg-indigo-600 dark:focus:ring-indigo-400">
                    Filter
                </button>
            </div>
        </form>

        <!-- Display the top visitors -->
        <div class="overflow-x-auto rounded-lg">
            <table class="min-w-full bg-white dark:bg-neutral-800 rounded-lg shadow">
                <thead class="bg-neutral-200 dark:bg-neutral-800">
                <tr>
                    <th class="px-4 py-2 text-left text-neutral-600 dark:text-neutral-300">Nom</th>
                    <th class="px-4 py-2 text-left text-neutral-600 dark:text-neutral-300">Pr√©nom</th>
                    <th class="px-4 py-2 text-left text-neutral-600 dark:text-neutral-300">Montant valide</th>
                </tr>
                </thead>
                <tbody>
                {% for fiche in ficheFrais %}
                    <tr class="hover:bg-neutral-100 dark:hover:bg-neutral-800">
                        <td class="px-4 py-2 border-t border-neutral-200 dark:border-neutral-700">{{ fiche.user.nom }}</td>
                        <td class="px-4 py-2 border-t border-neutral-200 dark:border-neutral-700">{{ fiche.user.prenom }}</td>
                        <td class="px-4 py-2 border-t border-neutral-200 dark:border-neutral-700">{{ fiche.montantValid }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>

{% endblock %}
