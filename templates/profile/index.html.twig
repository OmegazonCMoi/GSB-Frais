{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}
    <div class="h-screen">
    <div class="max-w-2xl mx-auto p-6 bg-white shadow-lg rounded-lg mt-10">
        <h1 class="text-2xl font-bold mb-4">Profil de {{ user.prenom }} {{ user.nom }}</h1>

        <div class="mb-4">
            <p><strong>Email :</strong> {{ user.email }}</p>
            <p><strong>Rôle :</strong> {{ app.user.roles[0] == 'ROLE_USER' ? 'Visiteur' : (app.user.roles[0] == 'ROLE_COMPTABLE' ? 'Comptable' : app.user.roles[0]) }}</p>
        </div>

        <div class="mb-4">
            <p class="font-semibold">Authentification à deux facteurs :</p>
            {% if secret %}
                <p class="text-green-600 border border-green-500 bg-green-400/50 p-4 rounded-lg mt-1">Activée ✅</p>
            {% else %}
                <a href="{{ path('app_2fa_setup') }}" class="w-full text-center mt-2 inline-block px-4 py-3 bg-blue-500 text-white rounded-lg hover:bg-blue-600">Activer 2FA</a>
            {% endif %}
        </div>

        <div class="mb-4">
            <a href="{{ path('app_logout') }}" class="inline-block px-4 py-3 w-full bg-red-500 text-center text-white rounded-lg hover:bg-red-600">Déconnexion</a>
        </div>
    </div>
    </div>
{% endblock %}
