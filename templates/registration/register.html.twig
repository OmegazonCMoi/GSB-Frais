{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="mt-20 flex items-center justify-center bg-neutral-100 dark:bg-neutral-900">
        <div class="w-full max-w-2xl bg-white dark:bg-neutral-800 rounded-xl shadow-lg p-8">
            <h1 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 mb-6 text-center">Register</h1>

            <!-- Affichage des erreurs du formulaire -->
            {{ form_errors(registrationForm) }}

            <!-- DÃ©but du formulaire -->
            {{ form_start(registrationForm) }}

            <!-- Grid pour les champs -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                <div>
                    {{ form_row(registrationForm.email, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.login, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.nom, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.prenom, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.adresse, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.cp, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.ville, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_row(registrationForm.dateEmbauche, {
                        'attr': {
                            'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                        }
                    }) }}
                </div>
            </div>

            <div class="mb-4">
                {{ form_row(registrationForm.plainPassword, {
                    'label': 'Mot de passe',
                    'attr': {
                        'class': 'block w-full p-2.5 border border-neutral-300 dark:border-neutral-600 rounded-lg bg-neutral-50 dark:bg-neutral-700 text-neutral-900 dark:text-neutral-100 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:focus:ring-blue-400'
                    }
                }) }}
            </div>

            <!-- Bouton de soumission -->
            <button type="submit" class="w-full py-3 mt-5 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:bg-blue-500 dark:hover:bg-blue-600">
                Register
            </button>

            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
