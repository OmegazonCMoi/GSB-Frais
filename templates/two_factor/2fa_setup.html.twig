{% extends 'base.html.twig' %}

{% block title %}Hello TwoFactorController!{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto p-8 space-y-6">
        <img src="{{ qr_code_data_uri(qrCode) }}" alt="QR Code" class="justify-center mx-auto flex" />

        <form method="POST" class="space-y-6">
            <div>
                <label for="auth_code" class="block text-sm font-medium text-gray-700">Entrez le code de v√©rification</label>
                <input type="text" name="auth_code" id="auth_code" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" required>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-lg text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Activer 2FA
                </button>
            </div>
        </form>
    </div>
{% endblock %}
